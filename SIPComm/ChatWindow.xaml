<Window x:Class="SIPComm.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="300" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF000C17" Offset="0"/>
				<GradientStop Color="#FF22405D" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		
		<TextBlock Name="ChatBox" TextWrapping="Wrap"  Foreground="#FF6EB3CD" Margin="2,2,2,2" Grid.IsSharedSizeScope="True" ScrollViewer.CanContentScroll="True"/>
		<TextBox Name="MessageBox"  Height="25" TextWrapping="Wrap" Grid.Row="1" Background="#FF313744" Foreground="#FF79C1E2" KeyDown="MessageBox_KeyDown" Margin="2" VerticalContentAlignment="Center"/>

	</Grid>
</Window>
